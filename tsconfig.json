{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/type"],
    "types": ["jsdom", "element-plus/global"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/__tests__/App.spec.hs", "src/components/__tests__/SearchForm.spec.hs", "src/components/__tests__/SaveForm.spec.hs"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
